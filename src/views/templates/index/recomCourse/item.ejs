<div class="recom-course-item">
  <div class="course-cover">
    <a 
      href="<%= item.href %>"
      class="course-lk"
      target="_blank"
    >
      <img 
        src="<%= item.posterUrl %>" 
        alt="<%= item.title %>"
        class="course-img"
      />
    </a>
  </div>
  <div class="course-info">
    <h1 class="course-tt">
      <a 
        href="<%= item.href %>"
        class="course-lk"
        target="_blank"
      >
        <%= item.title %>
      </a>
    </h1>
    <p class="course-desc"><%= item.description %></p>
    <div class="spread-info">
      <img 
        src="<%= item.teacherImg %>" 
        alt="item.teacherName"
        class="teacher-img"
      />
      <span class="teacher-name"><%= item.teacherName %></span>
      <i></i>
      <span class="count"><%= item.studentCount %>人正在学习</span>
    </div>
    <div class="btn-wrap">
      <a 
        href="<%= item.href %>"
        class="btn btn-search"
        target="_blank"
      >立即报名</a>

      <a 
        href=""
        class="btn btn-search"
        target="_blank"
      >
        课程咨询
      </a>
    </div>
  </div>
</div>